rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow read/write access to all users under any path
    match /{allPaths=**} {
      allow read: if true;  // Allow all reads
      allow write: if request.auth != null;  // Require auth for writes
    }
    
    // Videos collection rules
    match /videos/{videoId} {
      // Allow read access if user is authenticated (even anonymously)
      allow read: if request.auth != null;
      
      // Allow write access if user is authenticated (even anonymously)
      allow write: if request.auth != null;
      
      // Allow users to delete their own videos
      allow delete: if request.auth != null;
    }
  }
} 